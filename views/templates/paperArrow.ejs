<style>
  .hand-container {
    position: relative;
    width: 64px;
    height: 64px;
    cursor: none;
    perspective: 800px;
    animation: moveFinger 3s infinite ease-in-out;
  }

  @keyframes moveFinger {
    0% {
      transform:translate3D(60px, 0px, 0px);
    }
    50% {
      transform: translate3D(-10px, -20px, 0px);
    }
    100% {
      transform:translate3D(60px, 0px, 0px);
    }
  }

  .clicking-hand {
    width: 100%;
    height: 100%;
    color: #f4c2a0;
  }

  .index-finger {
    transform-origin: 8px 16px; /* Ajusta según la posición del dedo */
    animation: pressFinger 2s infinite ease-in-out;
  }

  @keyframes pressFinger {
    0%,
    100% {
      transform: scale3D(1, 1, 1);
    }
    50% {
      transform: scale3D(1, 0.95, 0.8);
    }
  }

  .ripple {
    position: absolute;
    left: 43%;
    top: 10%;
    width: 20px;
    height: 20px;
    background: transparent;
    border: 2px solid rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: rippleAnim 2s infinite ease-in-out;
    pointer-events: none;
    z-index: -1;
  }

  @keyframes rippleAnim {
    0% {
      opacity: 0.4;
      transform: translate(-50%, -50%) scale(0.5);
    }
    50% {
      opacity: 0.2;
      transform: translate(-50%, -50%) scale(1.5);
    }
    100% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(2);
    }
  }
</style>
