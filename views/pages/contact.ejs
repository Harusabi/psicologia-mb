<!doctype html>

<head>
  <meta charset="UTF-8" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Contact Us</title>

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
    crossorigin="anonymous" />

  <link rel="stylesheet" href="css/contact.css" />
</head>

<body>
  <%- include('../templates/header.ejs') %>

  <div class="container-fluid container-father">
    <section class="container-md hero">
      <h1>Contactanos</h1>

      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. iste in quis ea
        doloribus, temporibus nemo, animi beatae
      </p>
    </section>

    <div class="container-md contact">
      <div class="container-info">
        <section class="contact section">
          <h3>Información de Contacto</h3>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. iste in
            quis ea doloribus, temporibus nemo, animi beatae
          </p>
        </section>
        <p><i class="bi bi-envelope-fill"></i> test@test.com</p>
        <p><i class="bi bi-whatsapp"></i> Numero: 300000000</p>
        <p>
          <i class="bi bi-geo-alt-fill"></i> Dirección: Calle Falsa 123, Ciudad
        </p>
        <div class="circle-figure"></div>
        <div class="icons-socials">
          <a
            href="https://instagram.com"
            target="_blank"
            class="icon-link instagram">
            <i class="bi bi-instagram"></i
          ></a>
          <a
            href="https://instagram.com"
            target="_blank"
            class="icon-link facebook">
            <i class="bi bi-facebook"></i
          ></a>
        </div>
      </div>
      <form action="/contact" method="POST">
        <div class="form-container">
          <div class="container-sm form-group">
            <div class="group-name">
              <label for="name" class="form-label">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required />
            </div>
            <div class="group-apellido">
              <label for="name" class="form-label">Apellido</label>
              <input
                type="text"
                class="form-control"
                id="apellido"
                name="apellido"
                required />
            </div>
          </div>
          <div class="container-sm form-group">
            <div class="group-mail">
              <label for="email" class="form-label">Correo Electrónico</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required />
            </div>
            <div class="group-phone">
              <label for="email" class="form-label">Numero Telefonico</label>
              <input
                type="tel"
                class="form-control"
                id="email"
                name="email"
                required />
            </div>
          </div>
          <div class="container-sm form-group">
            <label for="email" class="form-label">Tipo de publico</label>
            <div class="group-radio">
              <input type="radio" id="email" value="1" name="email" required />
              <label class="form-label">Empresa</label>
              <input type="radio" id="email" value="1" name="email" required />
              <label class="form-label">Persona natural</label>
            </div>
          </div>
          <div class="container-sm form-group">
            <div class="group-message">
              <label for="email" class="form-label">Mesage</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required />
            </div>
          </div>
          <button type="submit" class="btn btn-primary submit-form">
            Enviar
          </button>
        </div>
      </form>
    </div>
  </div>
  <%- include('../templates/footer.ejs') %>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
    crossorigin="anonymous"
    defer></script>
  <script src="/js/header.js"></script>
</body>
